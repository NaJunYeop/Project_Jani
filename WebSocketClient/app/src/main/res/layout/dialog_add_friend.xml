<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="addFriendViewModel"
            type="com.example.websocketclient.viewmodels.AddFriendViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:text="@{addFriendViewModel.textViewString}">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="확인" >
                <!--android:onClick="@{() -> addFriendViewModel.okButtonClicked()}"-->
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="취소" >
                <!--android:onClick="@{() -> addFriendViewModel.noButtonClicked()}"-->
            </Button>
        </LinearLayout>

    </LinearLayout>
</layout>