<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="position"
            type="Integer" />
        <variable
            name="chatRoomViewModel"
            type="com.example.websocketclient.viewmodels.ChatRoomViewModel" />
        <variable
            name="mainViewModel"
            type="com.example.websocketclient.viewmodels.MainViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:padding="3sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chatmessage_iv_profile"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_gravity="top"
                android:src="@drawable/person_image"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@{chatRoomViewModel.modelRepository.selectedChatRoomModel.messageModels.get(position).senderName}"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:maxLength="150"
                    android:maxLines="15"
                    android:padding="10sp"
                    android:textSize="15sp"
                    android:text="@{chatRoomViewModel.modelRepository.selectedChatRoomModel.messageModels.get(position).contents}"/>
                <TextView
                    android:id="@+id/chatmessage_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@{chatRoomViewModel.modelRepository.selectedChatRoomModel.messageModels.get(position).senderSideDate}"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>